{{!
    @template assignsubmission_#snapPluginName#/snapview

    This template will render an iframe for #snapPluginApp# content.

    Variables required for this template:
    * snapurl - The base Snap! URL.
    * snapmode - The mode to display this Snap! project: with the full editor, embeded...
    * userid - The creator of this Snap! content.
    * attempt - The attempt number.
    * width - Iframe width.
    * height - Iframe height.
    * #snapPluginName#_xmlproject - The XML project to load.

    Example context (json):
    {
        "snapurl": "http://myserver/mod/assign/submission/#snapPluginName#/run/index.html",
        "snapmode": "embed",
        "userid": "3",
        "attempt": "1",
        "width": "100%",
        "height": "400px"
        "#snapPluginName#_xmlproject": "<project name="projectName" app="#snapPluginApp# 1.0, http://snap.berkeley.edu" version="1"><notes>...</notes></project>"
    }

}}
<div class="snap-button_#snapPluginName#{{#editable}} snap-iframe-hidden_#snapPluginName#"{{/editable}}">
    <span id="snapButton_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" onclick="require(['assignsubmission_#snapPluginName#/view'], function(View) {View.start('{{#snapPluginName#_xmlproject}}','{{snapmode}}', '{{userid}}', '{{attempt}}');});">{{#pix}} snapMoodle, assignsubmission_snap, #snapPluginApp# in Moodle {{/pix}}</span>
    <a href="#" id="play_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" onclick="require(['assignsubmission_#snapPluginName#/view'], function(View) {View.start('{{#snapPluginName#_xmlproject}}','{{snapmode}}', '{{userid}}', '{{attempt}}');}); return false;"><i id="playicon_snap-{{snapmode}}-{{userid}}-{{attempt}}" class="fa fa-fw fa-play"></i></a>
</div>

<div id="snapContainer_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}"{{^editable}} class="snap-iframe-hidden_#snapPluginName#"{{/editable}} style="width: {{width}}; height: {{height}}; overflow: auto;">
    <div id="snapNavBar_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" class="snap-navbar_#snapPluginName#" style="width:910px">
        <span onclick="require(['assignsubmission_#snapPluginName#/view'], function(View) {View.toogleFullScreen('{{snapmode}}', '{{userid}}', '{{attempt}}');});">{{#pix}} snapMoodle, assignsubmission_#snapPluginName#, #snapPluginApp# in Moodle {{/pix}}</span>
        <a href="#" id="togglingFS_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" onclick="require(['assignsubmission_#snapPluginName#/view'], function(View) {View.toogleFullScreen('{{snapmode}}', '{{userid}}', '{{attempt}}');}); return false;"><i id="togglingFSicon_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" class="fa fa-fw fa-expand"></i></a>
        {{#editable}}<a href="#" onclick="document.getElementById('id_submitbutton').click()"><i class="fa fa-fw fa-save"></i></a>{{/editable}}
        {{^editable}}<span class="fa-fw fa-stack" style="color:white;font-size:18px;text-align: center;padding: 5px 15px;"><i class="fa fa-stack-1x fa-save"></i><i class="fa fa-stack-2x fa-ban" style="color:rgba(255,255,255,0.5)"></i></span>{{/editable}}
    </div>
    <iframe src="{{snapurl}}" id="snap_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" style="width:910px; height: 500px">
    </iframe>
</div>
{{#editable}}{{#js}}
    require(['assignsubmission_#snapPluginName#/init'], function(Init) {Init.init('{{#snapPluginName#_xmlproject}}', '{{snapmode}}', '{{userid}}', '{{attempt}}');});
{{/js}}{{/editable}}

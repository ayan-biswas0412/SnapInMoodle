{{!
    @template assignsubmission_#snapPluginName#/snapiframe

    This template will render an iframe for #snapPluginApp# content.

    Variables required for this template:
    * snapurl - The base Snap! URL.
    * snapmode - The mode to display this Snap! project: with the full editor, embeded...
    * userid - The creator of this Snap! content.
    * attempt - The attempt number.
    * width - Iframe width.
    * height - Iframe height.
    * #snapPluginName#_xmlproject - The XML project to load.

    Example context (json):
    {
        "snapurl": "http://myserver/mod/assign/submission/#snapPluginName#/run/index.html",
        "snapmode": "embed",
        "userid": "3",
        "attempt": "1",
        "width": "100%",
        "height": "400px"
        "#snapPluginName#_xmlproject": "<project name="projectName" app="#snapPluginApp# 1.0, http://snap.berkeley.edu" version="1"><notes>...</notes></project>"
    }

}}
<div id="snapContainer_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" class="snap-iframe-wrapper_#snapPluginName#" style="width: {{width}}; height: {{height}}; overflow: auto;">
    <div class="snap-navbar_#snapPluginName#">
        <span onclick="require(['assignsubmission_#snapPluginName#/frame'], function(Frame) {Frame.toogleFullScreen('{{snapmode}}', '{{userid}}', '{{attempt}}');});">{{#pix}} snapMoodle, assignsubmission_#snapPluginName#, #snapPluginApp# in Moodle {{/pix}}</span>
        <a href="#" id="togglingFS_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" onclick="require(['assignsubmission_#snapPluginName#/frame'], function(Frame) {Frame.toogleFullScreen('{{snapmode}}', '{{userid}}', '{{attempt}}');}); return false;"><i id="togglingFSicon_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" class="fa fa-fw fa-expand"></i></a>
        {{#editable}}<a href="#" onclick="document.getElementById('id_submitbutton').click()"><i class="fa fa-fw fa-save"></i></a>{{/editable}}
    </div>
    <iframe src="{{snapurl}}" id="snap_#snapPluginName#-{{snapmode}}-{{userid}}-{{attempt}}" {{#ihidden}}class="snap-iframe-hidden_#snapPluginName#" {{/ihidden}}style="width:100%; height: 650px" allow="fullscreen">
    </iframe>
</div>
{{#js}}
    require(['assignsubmission_#snapPluginName#/snap'], function(Snap) {Snap.init('{{#snapPluginName#_xmlproject}}', '{{snapmode}}', '{{userid}}', '{{attempt}}');});
{{/js}}
